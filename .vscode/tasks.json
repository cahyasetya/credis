{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "label": "create server build dir",
      "command": "mkdir",
      "args": [
        "-p",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/credis-server"
      }
    },
    {
      "type": "shell",
      "label": "create client build dir",
      "command": "mkdir",
      "args": [
        "-p",
        "build"
      ],
      "options": {
        "cwd": "${workspaceFolder}/credis-client"
      }
    },
    {
      "type": "shell",
      "label": "build server",
      "command": "clang",
      "args": [
        "-g",
        "main.c",
        "../credis-common/src/logger.c",
        "../credis-common/src/read.c",
        "../credis-common/src/write.c",
        "../credis-common/src/assert.c",
        "-I../credis-common/include",
        "-o",
        "build/main"
      ],
      "options": {
        "cwd": "${workspaceFolder}/credis-server"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "dependsOn": [
        "create server build dir"
      ]
    },
    {
      "type": "shell",
      "label": "build client",
      "command": "clang",
      "args": [
        "-g",
        "main.c",
        "../credis-common/src/logger.c",
        "../credis-common/src/read.c",
        "../credis-common/src/write.c",
        "../credis-common/src/assert.c",
        "-I../credis-common/include",
        "-o",
        "build/main"
      ],
      "options": {
        "cwd": "${workspaceFolder}/credis-client"
      },
      "problemMatcher": [
        "$gcc"
      ],
      "group": "build",
      "dependsOn": [
        "create client build dir"
      ]
    }
  ]
}
